# Trust Bank Proxy Service Environment Configuration
# For: trust-ecfps-proxy service (ecfps-addressing-web module)
# This file provides environment variable overrides for Spring Boot configuration
# Vault integration is enabled - these serve as fallback values when Vault is unavailable

# ============================================================================
# Spring Boot Configuration
# ============================================================================

# Spring Boot Config Data API for Vault integration
# Use 'none' to disable Vault, 'optional:vault://' to enable with graceful fallback
#SPRING_CONFIG_IMPORT=optional:vault://

# Spring profiles configuration  
#SPRING_PROFILES_ACTIVE=default


# ============================================================================
# HashiCorp Vault Configuration
# ============================================================================

# Vault server connection settings
SPRING_CLOUD_VAULT_HOST=10.3.80.101
SPRING_CLOUD_VAULT_PORT=8200
SPRING_CLOUD_VAULT_SCHEME=http

# Vault authentication configuration
SPRING_CLOUD_VAULT_AUTHENTICATION=TOKEN
SPRING_CLOUD_VAULT_TOKEN=dev-only-token

# Vault KV v2 secrets configuration
SPRING_CLOUD_VAULT_KV_ENABLED=true
SPRING_CLOUD_VAULT_KV_BACKEND=secret
SPRING_CLOUD_VAULT_SECRET_PATH=ecfps/database

# ============================================================================
# Database Configuration (Fallback Values)
# ============================================================================
# These values are used when Vault secrets are unavailable
# Primary source: Vault secret at path configured above
#JDBC_URL=jdbc:postgresql://10.3.80.101:5432/ecfps_trust?stringtype=unspecified
#DB_USER=trust
#DB_PASS=iaspec

# ============================================================================
# Container Configuration
# ============================================================================

TZ=Asia/Singapore
SERVER_PORT=8080

# ============================================================================
# Service Configuration
# ============================================================================

ECFPS_PROXY_URL=http://trust-ecfps-proxy:8080
ECFPS_PAYMENT_URL=http://trust-ecfps-payment:8080
ECFPS_GATEWAY_URL=http://trust-ecfps-gateway:8080
ECFPS_CBE_URL=http://trust-ecfps-cbe:8080

